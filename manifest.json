{
  "manifest_version": 3,
  "name": "Willhaben Date Display",
  "version": "1.2",
  "description": "A Firefox addon to display the publication date on Willhaben.at",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.willhaben.at/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{903e5c36-da1d-44da-a9d8-662e83d5f077}"
    }
  }
}
